<div class = "container">
<%= form_with url: '/main/relay', method: 'post', data: {turbo: false} do |form| %> 
	<%= form.label :userid, style: "display: block",class: "form-text" %>
    <%= form.text_field :userid,class: "form-control" %>
    <%= form.label :password, style: "display: block",class: "form-text" %>
    <%= form.password_field :password,class: "form-control" %><br>
    <%= form.submit text="Login",class: "btn btn-primary"%>
<%end%>
</div>